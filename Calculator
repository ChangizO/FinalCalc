package MyProject.UltimateCalculator;

import java.util.Scanner;

public class Calculator {
    public static void main(String[] args) {

        Scanner scanner = new Scanner(System.in);
        while (true) {

            System.out.print("Enter your expression: ");
            String userInput = scanner.nextLine();

            try {
                String[] array1 = userInput.split(" ");
                if (array1.length != 3)
                    throw new Exception("Invalid input parameters");

                Number firstNumber = NumberStorage.parsing(array1[0]);
                Number secondNumber = NumberStorage.parsing(array1[2], firstNumber.getType());
                String result = MindCalc.calculate(firstNumber, secondNumber, array1[1]);
                System.out.println("Output: " + result);

            } catch (Exception e) {
                System.out.println(e.getMessage());
                break;
            }
        }

        scanner.close();
    }
}
