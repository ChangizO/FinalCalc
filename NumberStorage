package MyProject.UltimateCalculator;

import java.util.Map;
import java.util.TreeMap;

public class NumberStorage {
    private final static TreeMap<Integer, String> romanValue = new TreeMap<>();

    static {
        romanValue.put(1, "I");
        romanValue.put(4, "IV");
        romanValue.put(5, "V");
        romanValue.put(9, "IX");
        romanValue.put(10, "X");
        romanValue.put(40, "XL");
        romanValue.put(50, "L");
        romanValue.put(90, "XC");
        romanValue.put(100, "C");
    }

    static Number parsing(String element) throws Exception {

        int value;
        NumberType type;

        try {
            value = Integer.parseInt(element);
            type = NumberType.ARABIC;
        } catch (NumberFormatException e) {
            value = ConvertArabic(element);
            type = NumberType.ROMAN;
        }

        if (value < 1 || value > 10) {
            throw new Exception("Invalid value, only 1(I) to 10(X) allowed");
        }

        return new Number(value, type);
    }

    static Number parsing(String symbol, NumberType type) throws Exception {

        Number number = parsing(symbol);
        if (number.getType() != type) {
            throw new Exception("Different types of values");
        }

        return number;
    }

    private static int characterToNumber(char character) {

        int result = -1;

        for (Map.Entry<Integer, String> entry : romanValue.entrySet()) {
            if (entry.getValue().equals(String.valueOf(character))) result = entry.getKey();
        }
        return result;
    }

    static String ConvertRoman(int number) {

        int i = romanValue.floorKey(number);

        if (number == i) {
            return romanValue.get(number);
        }
        return romanValue.get(i) + ConvertRoman(number - i);
    }

    static int ConvertArabic(String roman) throws Exception {
        int result = 0;

        int i = 0;
        while (i < roman.length()) {
            char character = roman.charAt(i);
            int num = characterToNumber(character);

            if (num < 0) throw new Exception("Invalid roman sign");

            i++;
            if (i == roman.length()) {
                result += num;
            } else {
                int nextNum = characterToNumber(roman.charAt(i));
                if (nextNum > num) {
                    result += (nextNum - num);
                    i++;
                } else result += num;
            }
        }
        return result;
    }
}
